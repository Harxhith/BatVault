rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the document belongs to the authenticated user
    function isOwner() {
      return isAuthenticated() && resource.data.user_id == request.auth.uid;
    }


    // Helper function to check if the user is creating a document with their own user_id
    function isCreatingWithOwnerId() {
      return isAuthenticated() && request.resource.data.user_id == request.auth.uid;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow users to access their own data in each collection
    match /expenses/{docId} {
      allow read, delete: if isOwner();
      allow create: if isCreatingWithOwnerId();
      allow update: if isOwner() && isCreatingWithOwnerId();
    }

    match /categories/{docId} {
      allow read, delete: if isOwner();
      allow create: if isCreatingWithOwnerId();
      allow update: if isOwner() && isCreatingWithOwnerId();
    }

    match /user_settings/{docId} {
      allow read: if isOwner() || (isAuthenticated() && docId == request.auth.uid);
      allow delete: if isOwner() || (isAuthenticated() && docId == request.auth.uid);
      allow create: if isCreatingWithOwnerId() || (isAuthenticated() && docId == request.auth.uid && request.resource.data.user_id == request.auth.uid);
      allow update: if (isOwner() && isCreatingWithOwnerId()) || (isAuthenticated() && docId == request.auth.uid && request.resource.data.user_id == request.auth.uid);
    }

    match /goals/{docId} {
      allow read, delete: if isOwner();
      allow create: if isCreatingWithOwnerId();
      allow update: if isOwner() && isCreatingWithOwnerId();
    }

    match /goal_savings/{docId} {
      allow read, delete: if isOwner();
      allow create: if isCreatingWithOwnerId();
      allow update: if isOwner() && isCreatingWithOwnerId();
    }

    match /recurring_transactions/{docId} {
      allow read, delete: if isOwner();
      allow create: if isCreatingWithOwnerId();
      allow update: if isOwner() && isCreatingWithOwnerId();
    }
  }
}
